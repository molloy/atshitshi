/ h1 hello
div id="search_controls" title="Dialog Title"
	= form_tag :remote => true
		= label_tag 'Where?'
		= text_field_tag 'user_search', @user_search
		= submit_tag 'Go'
		= text_field_tag 'lat'
		= text_field_tag 'lng'
		= text_field_tag 'street_number'
		= text_field_tag 'route'
		= text_field_tag 'locality'
		= text_field_tag 'administrative_area_level_1'
		= text_field_tag 'administrative_area_level_2'
		= text_field_tag 'country'
		= text_field_tag 'postal_code'
		= text_field_tag 'type'

javascript:
	$(document).ready(function() {
		user_location = '#{@user_location}';
	})
